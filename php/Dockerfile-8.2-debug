FROM jakubboucek/lamp-devstack-php:8.2-rc

LABEL org.label-schema.name="PHP 8.2 (Prerelease, Apache module + Xdebug)"

# Configure Xdebug
COPY xdebug.ini /usr/local/etc/php/conf.d/xdebug.ini

# Prevent interactive block
ARG DEBIAN_FRONTEND=noninteractive

WORKDIR /tmp

# Install Xdebug (master-dev version)
RUN set -eux; \
    curl https://xdebug.org/files/xdebug-3.2.0alpha2.tgz -L -o xdebug-3.2.0alpha2.tgz; \
    tar -xzf xdebug-3.2.0alpha2.tgz; \
    rm xdebug-3.2.0alpha2.tgz; \
    cd xdebug-3.2.0alpha2; \
    phpize; \
    ./configure --enable-xdebug; \
    make -j$(nproc); \
    make install; \
    docker-php-ext-enable xdebug; \
    rm -rf /var/tmp/* /tmp/* /tmp/pear/temp/*;

WORKDIR /var/www/html
