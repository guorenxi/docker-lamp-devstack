FROM jakubboucek/lamp-devstack-php:8.3

LABEL org.label-schema.name="PHP 8.3 (Apache module + Xdebug)"

# Configure Xdebug
COPY xdebug.ini /usr/local/etc/php/conf.d/xdebug.ini

# Prevent interactive block
ARG DEBIAN_FRONTEND=noninteractive

WORKDIR /tmp

# Install Xdebug (Pre-release version)
RUN set -eux; \
    curl https://xdebug.org/files/xdebug-3.3.0alpha2.tgz -o xdebug-3.3.0alpha2.tgz; \
    tar -xzf xdebug-3.3.0alpha2.tgz; \
    rm xdebug-3.3.0alpha2.tgz; \
    cd xdebug-3.3.0alpha2; \
    phpize; \
    ./configure --enable-xdebug; \
    make -j$(nproc); \
    make install; \
    docker-php-ext-enable xdebug; \
    rm -rf /tmp/*;

# Workdir after installation \
WORKDIR /var/www/html
